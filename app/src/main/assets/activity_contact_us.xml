<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <com.custom_widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:tag="label"
            android:text="@string/contact_us_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp"
            app:customFont="Poppins-Bold.ttf" />

        <View
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@android:color/black"
            android:tag="label" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/user"
                    android:tag="label" />

                <com.custom_widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:padding="@dimen/_2sdp"
                    android:tag="label"
                    android:text="@string/your_name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    app:customFont="Poppins-Light.ttf" />

            </LinearLayout>

            <com.custom_widgets.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_et_bg"
                android:inputType="textImeMultiLine|text"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:tag="name"
                android:textCursorDrawable="@drawable/drawable_cursor_black"
                android:textSize="@dimen/_12ssp"
                app:customFontEditText="Poppins-Light.ttf" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/mail"
                    android:tag="label" />

                <com.custom_widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:padding="@dimen/_2sdp"
                    android:tag="label"
                    android:text="@string/your_email"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    app:customFont="Poppins-Light.ttf" />
            </LinearLayout>

            <com.custom_widgets.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_et_bg"
                android:inputType="textWebEmailAddress"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:tag="email"
                android:textCursorDrawable="@drawable/drawable_cursor_black"
                android:textSize="@dimen/_12ssp"
                app:customFontEditText="Poppins-Light.ttf" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/msg"
                    android:tag="label" />

                <com.custom_widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:padding="@dimen/_2sdp"
                    android:tag="label"
                    android:text="@string/your_message"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    app:customFont="Poppins-Light.ttf" />

            </LinearLayout>

            <com.custom_widgets.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_et_bg"
                android:gravity="left|top"
                android:lines="3"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:tag="message"
                android:textCursorDrawable="@drawable/drawable_cursor_black"
                android:textSize="@dimen/_12ssp"
                app:customFontEditText="Poppins-Light.ttf"
                tools:ignore="RtlHardcoded" />

            <com.custom_widgets.CustomButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/selector_blue_shadow_button"
                android:gravity="center"
                android:inputType="textFilter"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingTop="@dimen/_3sdp"
                android:stateListAnimator="@null"
                android:tag="send"
                android:text="@string/send"
                android:textColor="@android:color/white"
                android:textIsSelectable="false"
                android:textSize="@dimen/_12ssp"
                app:customFontButton="Poppins-SemiBold.ttf"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>