<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/blue_shade">


        <ImageView
            android:tag="label"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/taj" />

        <ImageView
            android:tag="back"
            android:id="@+id/back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/left_arow" />

    </RelativeLayout>

    <ImageView
        android:tag="label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_15sdp"
        android:src="@drawable/forget" />

    <com.custom_widgets.CustomTextView
        android:tag="label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/forgot_your_password_lbl"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14ssp"
        app:customFont="Poppins-Regular.ttf" />

    <com.custom_widgets.CustomTextView
        android:tag="label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:gravity="center"
        android:lineSpacingExtra="-5dp"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:text="@string/forgot_your_password_detail"
        android:textColor="@color/grey2"
        android:textSize="@dimen/_10ssp"
        app:customFont="Poppins-Light.ttf" />

    <com.custom_widgets.CustomEditText
        android:tag="email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/grey_border"
        android:hint="@string/email_hint"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:textColor="@color/grey2"
        android:textColorHint="@color/grey1"
        android:textSize="@dimen/_12ssp"
        app:customFontEditText="Poppins-Regular.ttf" />


    <com.custom_widgets.CustomButton
        android:tag="send"
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/selector_blue_shadow_button"
        android:gravity="center"
        android:inputType="textFilter"
        android:paddingBottom="@dimen/_3sdp"
        android:paddingLeft="@dimen/_70sdp"
        android:paddingRight="@dimen/_70sdp"
        android:paddingTop="@dimen/_3sdp"
        android:stateListAnimator="@null"
        android:text="@string/send"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="@dimen/_12ssp"
        app:customFontButton="Poppins-SemiBold.ttf"
        tools:ignore="UnusedAttribute" />

</LinearLayout>