<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:tag="back"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_12sdp"
        android:src="@drawable/back_selector" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:orientation="vertical">


            <ImageView
                android:tag="label"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_50sdp"
                android:src="@drawable/masjid_logo" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:tag="label"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/masjid_sky" />

                <com.custom_widgets.CustomTextView
                    android:tag="label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/signin"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    app:customFont="Poppins-Regular.ttf" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">


                <com.custom_widgets.CustomEditText
                    android:tag="email"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_border"
                    android:hint="@string/masjidusername"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey1"
                    android:textSize="@dimen/_10ssp"
                    app:customFontEditText="Poppins-Regular.ttf" />


                <com.custom_widgets.CustomEditText
                    android:tag="password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/grey_border"
                    android:hint="@string/password"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey1"
                    android:textSize="@dimen/_10ssp"
                    app:customFontEditText="Poppins-Regular.ttf" />

                <com.custom_widgets.CustomTextView
                    android:tag="forgot_password"
                    android:id="@+id/text_forgotpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="-5dp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="@string/forgotpass"
                    android:textColor="@color/deep_sky_blue"
                    android:textSize="@dimen/_10ssp"
                    app:customFont="Poppins-Light.ttf" />


                <com.custom_widgets.CustomButton
                    android:tag="signin"
                    android:id="@+id/login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_39sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/selector_blue_shadow_button"
                    android:gravity="center"
                    android:inputType="textFilter"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:paddingRight="@dimen/_35sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:stateListAnimator="@null"
                    android:text="@string/signin"
                    android:textColor="@android:color/white"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/_12ssp"
                    app:customFontButton="Poppins-SemiBold.ttf"
                    tools:ignore="UnusedAttribute" />

                <com.custom_widgets.CustomTextView
                    android:tag="label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_minus5sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="@string/bysigningup"
                    android:textColor="@color/grey2"
                    android:textSize="@dimen/_10ssp"
                    app:customFont="Poppins-Light.ttf" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <com.custom_widgets.CustomTextView
                            android:tag="label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/registeras"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_10ssp"
                            app:customFont="Poppins-Regular.ttf" />


                        <com.custom_widgets.CustomTextView
                            android:tag="register_masjid"
                            android:id="@+id/resgister_masjid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_15sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:text="@string/masjid"
                            android:textColor="@color/deep_sky_blue"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="visible"
                            app:customFont="Poppins-Regular.ttf" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <com.custom_widgets.CustomTextView
                            android:tag="label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notamasjid"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_10ssp"
                            app:customFont="Poppins-Regular.ttf" />


                        <com.custom_widgets.CustomTextView
                            android:tag="skip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:gravity="center"
                            android:paddingBottom="@dimen/_15sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:text="@string/skip"
                            android:textColor="@color/deep_sky_blue"
                            android:textSize="@dimen/_10ssp"
                            app:customFont="Poppins-Regular.ttf" />


                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
