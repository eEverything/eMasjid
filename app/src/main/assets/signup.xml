<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:orientation="vertical">


            <ImageView
                android:tag="label"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_50sdp"
                android:src="@drawable/masjid_logo" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:tag="label"

                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/masjid_sky" />

                <com.custom_widgets.CustomTextView
                    android:tag="label"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:text="@string/loginnewwithemasjid"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customFont="Poppins-SemiBold.ttf" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.custom_widgets.CustomTextView
                    android:tag="label"

                    android:id="@+id/or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="-5dp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="OR"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customFont="Poppins-Light.ttf" />

                <View
                    android:tag="label"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/or"
                    android:background="@android:color/black" />

                <View
                    android:tag="label"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/or"
                    android:background="@android:color/black" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">


                <com.custom_widgets.CustomEditText
                    android:tag="username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_border"
                    android:hint="@string/masjidname"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey1"
                    android:textSize="@dimen/_12ssp"
                    app:customFontEditText="Poppins-Regular.ttf" />

                <com.custom_widgets.CustomEditText
                    android:tag="email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/grey_border"
                    android:hint="@string/email"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey1"
                    android:textSize="@dimen/_12ssp"
                    app:customFontEditText="Poppins-Regular.ttf" />

                <com.custom_widgets.CustomEditText
                    android:tag="confirmemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/grey_border"
                    android:hint="@string/confirmemail"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey1"
                    android:textSize="@dimen/_12ssp"
                    app:customFontEditText="Poppins-Regular.ttf" />

                <com.custom_widgets.CustomEditText
                    android:tag="password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/grey_border"
                    android:hint="@string/password"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey1"
                    android:textSize="@dimen/_12ssp"
                    app:customFontEditText="Poppins-Regular.ttf" />

                <RadioGroup
                    android:id="@+id/user_type"
                    android:tag="user_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:tag="masjid"
                        android:id="@+id/msjid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_bg"
                        android:checked="true"
                        android:padding="10dp"
                        android:text="@string/masjiduser"
                        android:textColor="@color/grey1"
                        android:textSize="@dimen/_12ssp" />

                    <RadioButton
                        android:tag="user"
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_bg"
                        android:checked="false"
                        android:padding="10dp"
                        android:text="@string/user"
                        android:textColor="@color/grey1"
                        android:textSize="@dimen/_12ssp" />

                </RadioGroup>


                <com.custom_widgets.CustomButton
                    android:tag="register"
                    android:id="@+id/login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_39sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/selector_blue_shadow_button"
                    android:gravity="center"
                    android:inputType="textFilter"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:paddingRight="@dimen/_35sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:stateListAnimator="@null"
                    android:text="@string/register"
                    android:textColor="@android:color/white"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/_12ssp"
                    app:customFontButton="Poppins-SemiBold.ttf"
                    tools:ignore="UnusedAttribute" />

                <com.custom_widgets.CustomTextView
                    android:tag="label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="@string/bysigningup"
                    android:textColor="@color/grey2"
                    android:textSize="@dimen/_10ssp"
                    app:customFont="Poppins-Light.ttf" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <com.custom_widgets.CustomTextView
                        android:tag="label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notamasjid"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        app:customFont="Poppins-SemiBold.ttf" />


                    <com.custom_widgets.CustomTextView
                        android:tag="skip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_15sdp"
                        android:paddingTop="@dimen/_15sdp"
                        android:text="@string/skip"
                        android:textColor="@color/deep_sky_blue"
                        android:textSize="@dimen/_10ssp"
                        app:customFont="Poppins-SemiBold.ttf" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
