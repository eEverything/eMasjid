<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/_15sdp"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_110sdp"
                android:background="@color/grey_lite3"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_5sdp">

                <com.custom_widgets.CustomTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:tag="name"
                    android:text="Hounslow Central Mosque"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_16ssp"
                    android:textIsSelectable="true"
                    android:longClickable="true"
                    app:customFont="Poppins-Medium.ttf" />

                <com.custom_widgets.CustomTextView
                    android:id="@+id/town"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="town"
                    android:text="JUUMasjid"
                    android:textColor="@color/deep_sky_blue"
                    android:textSize="@dimen/_14ssp"
                    android:textIsSelectable="true"
                    android:longClickable="true"
                    app:customFont="Poppins-Light.ttf" />

                <com.custom_widgets.CustomTextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="city"
                    android:text="Mosque in Hounslow, England"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textIsSelectable="true"
                    android:longClickable="true"
                    app:customFont="Poppins-Light.ttf" />

            </LinearLayout>

            <com.custom_widgets.CustomTextView
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:lineSpacingExtra="@dimen/_minus5sdp"
                android:tag="about_us"
                android:lines="4"
                android:maxLines="4"
                android:ellipsize="end"
                android:text="Loream ipsum Loream ipsum Loream ipsum Loream ipsum Loream ipsum Loream ipsum Loream ipsum Loream ipsum Loream ipsum "
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12ssp"
                android:textIsSelectable="true"
                android:longClickable="true"
                app:customFont="Poppins-Regular.ttf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/loction"
                    android:tag="label" />

                <com.custom_widgets.CustomTextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_2sdp"
                    android:tag="address"
                    android:text="367 Welington Rd S, Hownslow TR4 "
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textIsSelectable="true"
                    android:longClickable="true"
                    app:customFont="Poppins-Light.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"

                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/call"
                    android:tag="label" />

                <com.custom_widgets.CustomTextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_2sdp"
                    android:tag="phone_number"
                    android:text="020 8570 0938"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textIsSelectable="true"
                    android:longClickable="true"
                    app:customFont="Poppins-Light.ttf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"

                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/mail_1"
                    android:tag="label" />

                <com.custom_widgets.CustomTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_2sdp"
                    android:tag="email"
                    android:text="info@youmasjid.com"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textIsSelectable="true"
                    android:longClickable="true"
                    app:customFont="Poppins-Light.ttf" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"

                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/brow"
                    android:tag="label" />

                <com.custom_widgets.CustomTextView
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_2sdp"
                    android:tag="website"
                    android:text="www.youmasjid.com"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textIsSelectable="true"
                    android:longClickable="true"
                    app:customFont="Poppins-Light.ttf" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp">

            <ImageView
                android:id="@+id/majid_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:scaleType="fitXY"
                android:src="@drawable/majid_banner"
                android:tag="label" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/close"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_2sdp"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/close"
                android:tag="close" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>