<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/grey_lite3">


    <LinearLayout
        android:layout_marginBottom="@dimen/_5sdp"
        android:id="@+id/lin_forground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="8"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:src="@drawable/no_media"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_5sdp">


                    <LinearLayout
                        android:id="@+id/ll_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.custom_widgets.CustomTextView
                            android:id="@+id/masjid_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Southall Jamia Masjid"
                            android:textColor="@color/deep_sky_blue"
                            android:textSize="@dimen/_12ssp"
                            app:customFont="Poppins-Light.ttf" />


                        <com.custom_widgets.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="sjamia"
                            android:textColor="@color/text_black_deep"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="gone"
                            app:customFont="Poppins-Light.ttf" />

                        <com.custom_widgets.CustomTextView
                            android:id="@+id/days"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:text="2 days ago"
                            android:textColor="@color/text_black_deep"
                            android:textSize="@dimen/_11ssp"
                            app:customFont="Poppins-Light.ttf" />

                    </LinearLayout>


                    <com.custom_widgets.CustomTextView
                        android:id="@+id/masjid_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_detail"
                        android:layout_toLeftOf="@+id/imag_bookmark"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_minus3sdp"
                        android:lines="2"
                        android:maxLines="2"
                        android:textColor="@color/text_black_deep"
                        android:textSize="@dimen/_11ssp"
                        app:customFont="Poppins-Light.ttf" />

                    <ImageView
                        android:id="@+id/imag_bookmark"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@+id/ll_detail"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_bookmarked" />

                    <ImageView
                        android:id="@+id/imag_notbookmark"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@+id/ll_detail"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:padding="@dimen/_4sdp"
                        android:visibility="gone"
                        android:src="@drawable/ic_bookmark" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>


