<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp"
    android:background="@color/grey_lite3">


    <LinearLayout
        android:id="@+id/lin_forground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_5sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <com.custom_widgets.CustomTextView
                            android:id="@+id/masjid_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Southall Jamia Masjid"
                            android:textColor="@color/deep_sky_blue"
                            android:textSize="@dimen/_13ssp"
                            app:customFont="Poppins-Regular.ttf" />


                        <com.custom_widgets.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="sjamia"
                            android:textColor="@color/text_black_deep"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone"
                            app:customFont="Poppins-Light.ttf" />

                        <com.custom_widgets.CustomTextView
                            android:id="@+id/days"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.1"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:text="2 days ago"
                            android:textColor="@color/text_black_deep"
                            android:textSize="@dimen/_13ssp"
                            app:customFont="Poppins-Regular.ttf" />

                    </LinearLayout>


                    <com.custom_widgets.CustomTextView
                        android:id="@+id/masjid_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:maxLines="2"
                        android:textColor="@color/text_black_deep"
                        android:textSize="@dimen/_11ssp"
                        app:customFont="Poppins-Light.ttf" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingBottom="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/lin_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/share" />


                <com.custom_widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="@string/share"
                    android:textColor="@color/text_black_deep"
                    android:textSize="@dimen/_12ssp"
                    app:customFont="Poppins-Regular.ttf" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_16sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/alaram" />


                <com.custom_widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="@string/alarm"
                    android:textColor="@color/text_black_deep"
                    android:textSize="@dimen/_12ssp"
                    app:customFont="Poppins-Regular.ttf" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_16sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@mipmap/ic_download" />

                <com.custom_widgets.CustomTextView
                    android:id="@+id/tvDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="@string/save"
                    android:textColor="@color/text_black_deep"
                    android:textSize="@dimen/_12ssp"
                    app:customFont="Poppins-Regular.ttf" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llbookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_bookmark"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_bookmark" />


                <ImageView
                    android:id="@+id/img_bookmarked"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_bookmarked"
                    android:visibility="gone" />

                <com.custom_widgets.CustomTextView
                    android:id="@+id/tvbookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Pin"
                    android:textColor="@color/text_black_deep"
                    android:textSize="@dimen/_12ssp"
                    app:customFont="Poppins-Regular.ttf" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_document"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_2sdp"
                android:src="@mipmap/processed" />

            <com.custom_widgets.CustomTextView
                android:id="@+id/doc_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="NewLwtter.pdf"
                android:textColor="@color/text"
                android:textSize="@dimen/_13ssp"
                app:customFont="Poppins-Regular.ttf" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/gimage_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_95sdp" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/test" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_1sdp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/test" />

            <RelativeLayout
                android:id="@+id/r_layout3"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1sdp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image3"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#99000000" />

                <TextView
                    android:id="@+id/imagecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="+ 3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>


