<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/grey_lite3">


    <LinearLayout
        android:id="@+id/lin_forground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="8"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/_5sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.custom_widgets.CustomTextView
                            android:id="@+id/masjid_name"
                            app:customFont="Poppins-Light.ttf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Southall Jamia Masjid"
                            android:textColor="@color/deep_sky_blue"
                            android:textSize="@dimen/_13ssp" />


                        <com.custom_widgets.CustomTextView
                            app:customFont="Poppins-Light.ttf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="sjamia"
                            android:textColor="@color/text_black_deep"
                            android:textSize="@dimen/_11ssp"
                            android:visibility="invisible" />

                        <com.custom_widgets.CustomTextView
                            android:id="@+id/days"
                            app:customFont="Poppins-Light.ttf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:maxLines="1"
                            android:text="2 days ago"
                            android:textColor="@color/text_black_deep"
                            android:textSize="@dimen/_13ssp" />

                    </LinearLayout>


                    <com.custom_widgets.CustomTextView
                        android:id="@+id/masjid_detail"
                        app:customFont="Poppins-Light.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_minus3sdp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/_minus3sdp"
                        android:lines="2"
                        android:maxLines="2"
                        android:textColor="@color/text_black_deep"
                        android:textSize="@dimen/_11ssp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/alarm_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/share" />


                <com.custom_widgets.CustomTextView
                    app:customFont="Poppins-Light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="-5dp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="@string/share"
                    android:textColor="@color/text_black_deep"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/alaram" />


                <com.custom_widgets.CustomTextView
                    app:customFont="Poppins-Light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="-5dp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="@string/alarm"
                    android:textColor="@color/text_black_deep"
                    android:textSize="@dimen/_12ssp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gimage_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/test" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/test" />

            <RelativeLayout
                android:id="@+id/r_layout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/test" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#99000000" />

                <TextView
                    android:id="@+id/imagecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="+ 3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>


