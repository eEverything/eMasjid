<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">


    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/back"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="start"
                android:padding="@dimen/_9sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@mipmap/back_blue"/>

            <ImageView
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_16sdp"
                android:src="@drawable/masjid_logo"
                android:tag="label" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_30sdp"

                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/masjid_sky"
                    android:tag="label" />

                <com.custom_widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:tag="label"
                    android:text="Sign Up"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customFont="Poppins-SemiBold.ttf" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.custom_widgets.CustomTextView
                    android:id="@+id/or"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="-5dp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:tag="label"
                    android:text="OR"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customFont="Poppins-Light.ttf" />

                <View
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/or"
                    android:background="@android:color/black"
                    android:tag="label" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/or"
                    android:background="@android:color/black"
                    android:tag="label" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">


                <com.custom_widgets.CustomEditText
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background_corner"
                    android:hint="@string/masjidname"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_18sdp"
                    android:paddingRight="@dimen/_18sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:tag="username"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey1"
                    android:textSize="@dimen/_10ssp"
                    app:customFontEditText="Poppins-Regular.ttf" />

                <com.custom_widgets.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rounded_background_corner"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:tag="email"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey1"
                    android:textSize="@dimen/_10ssp"
                    app:customFontEditText="Poppins-Regular.ttf" />

                <com.custom_widgets.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/rounded_background_corner"
                    android:hint="@string/confirmemail"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:tag="confirmemail"
                    android:textColor="@color/grey2"
                    android:textColorHint="@color/grey1"
                    android:textSize="@dimen/_10ssp"
                    app:customFontEditText="Poppins-Regular.ttf" />
                <android.support.constraint.ConstraintLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.custom_widgets.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_background_corner"
                        android:hint="@string/password"
                        android:imeOptions="actionDone"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:id="@+id/pwd_edit_txt"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:tag="password"
                        android:textColor="@color/grey2"
                        android:textColorHint="@color/grey1"
                        android:textSize="@dimen/_10ssp"
                        app:customFontEditText="Poppins-Regular.ttf" />


                    <ImageView
                        android:id="@+id/img11"
                        android:src="@drawable/ic_eye_open"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"/>
                </android.support.constraint.ConstraintLayout>

                <RadioGroup
                    android:id="@+id/user_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:tag="user_type">

                    <RadioButton
                        android:id="@+id/msjid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_bg"
                        android:padding="10dp"
                        android:tag="masjid"
                        android:text="@string/masjiduser"
                        android:textStyle="bold"
                        android:textColor="@color/grey1"
                        android:textSize="@dimen/_11ssp" />

                    <RadioButton
                        android:textStyle="bold"

                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_bg"
                        android:checked="false"
                        android:padding="10dp"
                        android:tag="user"
                        android:text="@string/user"
                        android:textColor="@color/grey1"
                        android:textSize="@dimen/_11ssp" />

                </RadioGroup>


                <com.custom_widgets.CustomButton
                    android:id="@+id/login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/selector_blue_shadow_button"
                    android:gravity="center"
                    android:inputType="textFilter"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_35sdp"
                    android:paddingRight="@dimen/_35sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:stateListAnimator="@null"
                    android:tag="register"
                    android:text="@string/register"
                    android:textColor="@android:color/white"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/_11ssp"
                    app:customFontButton="Poppins-SemiBold.ttf"
                    tools:ignore="UnusedAttribute" />

                <com.custom_widgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:tag="label"
                    android:text="@string/bysigningup"
                    android:textColor="@color/grey2"
                    android:textSize="@dimen/_10ssp"
                    app:customFont="Poppins-Bold.ttf" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <com.custom_widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="label"
                        android:text="@string/notamasjid"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        app:customFont="Poppins-Bold.ttf" />


                    <com.custom_widgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_15sdp"
                        android:paddingTop="@dimen/_15sdp"
                        android:tag="skip"
                        android:text="@string/skip"
                        android:textColor="@color/deep_sky_blue"
                        android:textSize="@dimen/_10ssp"
                        app:customFont="Poppins-SemiBold.ttf" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>






</LinearLayout>
